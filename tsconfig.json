{
    "include": ["./src/**/*"],
    "exclude": ["./test"],
    "compilerOptions": {
      "esModuleInterop": true,
      "declaration": false,
      "lib": ["ES2021"],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": false,
      "strictNullChecks": true,
      "target": "ES2021"
    }
  }